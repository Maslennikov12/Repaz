<UserControl x:Class="WpfApp1.Control.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Control"
             mc:Ignorable="d" Height="302" Width="413">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="68,87,0,0" TextWrapping="Wrap"  VerticalAlignment="Top">
            <TextBlock.Text>
                <MultiBinding StringFormat=" {0} {1} {2}"> 
                    <Binding Path="Surname"></Binding>
                    <Binding Path="Name"></Binding>
                    <Binding Path="Lastname"></Binding> 
                </MultiBinding>
            </TextBlock.Text>
        </TextBlock>
    </Grid>
</UserControl>
